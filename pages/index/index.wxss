/* pages/index/index.wxss */
.home {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  background: #000;
}

.poster {
  flex: 1;
  width: 100%;
  height: 100%;
}

.start-btn {
  position: absolute;
  bottom: 40px;
  left: 20px;
  right: 20px;
  height: 48px;
  background: #07c160;
  color: #fff;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 600;
  box-shadow: 0 8px 24px rgba(7,193,96,0.35);
}


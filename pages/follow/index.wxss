.follow-page { height: 100vh; width: 100vw; position: relative; background: #000; }
.map { height: 100%; width: 100%; }
.hud { position: absolute; display: flex; gap: 12px; }
.top-left { left: 16px; top: 48px; }
.panel { backdrop-filter: blur(10px); background: rgba(255,255,255,0.18); border-radius: 12px; padding: 12px; color: #fff; box-shadow: 0 10px 24px rgba(0,0,0,0.25); width: 240px; }
.col { margin-bottom: 8px; }
.big { font-size: 28px; font-weight: 700; }
.label { font-size: 12px; opacity: 0.9; margin-top: 2px; }
.grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 8px; }
.cell { background: rgba(0,0,0,0.18); border-radius: 8px; padding: 8px; display: flex; align-items: baseline; gap: 4px; }
.cell .v { font-size: 18px; font-weight: 700; }
.cell .u { font-size: 12px; opacity: 0.85; }
.cell .k { font-size: 10px; opacity: 0.85; margin-left: auto; }

.bottom-bar { position: absolute; left: 16px; right: 16px; bottom: 24px; }
.start-btn { display: flex; align-items: center; justify-content: center; gap: 6px; color: #fff; background: rgba(0,0,0,0.35); backdrop-filter: blur(8px); border-radius: 999px; padding: 12px 16px; box-shadow: 0 10px 24px rgba(0,0,0,0.25); }


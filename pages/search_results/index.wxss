.routes {
  padding: 16px;
}

.route-item {
  background: #fff;
  border-radius: 8px;
  padding: 12px 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 16px;
  font-weight: 600;
  color: #111;
}

.chevron {
  color: #bbb;
  font-size: 20px;
}

.meta {
  display: flex;
  align-items: center;
  margin-top: 8px;
}

.meta-item {
  display: flex;
  align-items: baseline;
  gap: 6px;
}

.meta-label {
  font-size: 12px;
  color: #888;
}

.meta-value {
  font-size: 12px;
  color: #333;
  font-weight: 600;
}

.divider {
  width: 1px;
  height: 16px;
  background: #eee;
  margin: 0 12px;
}

.placeholder {
  padding: 48px 16px;
  text-align: center;
  color: #888;
}

.placeholder.error {
  color: #d93025;
}

.search-keyword-display {
  padding: 12px 16px;
  background: #f0f0f0;
  border-radius: 8px;
  margin-bottom: 12px;
  font-size: 14px;
  color: #333;
  text-align: center;
}

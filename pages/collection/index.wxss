.collection-page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 加载状态 */
.loading {
  padding: 48px 16px;
  text-align: center;
  color: #888;
  font-size: 16px;
}

/* 错误状态 */
.error-container {
  padding: 48px 16px;
  text-align: center;
}

.error-message {
  color: #d93025;
  font-size: 16px;
  margin-bottom: 16px;
}

.retry-btn {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 8px 16px;
  font-size: 14px;
}

/* 收藏头部 */
.collection-header {
  margin-bottom: 12px;
}

.cover-container {
  position: relative;
  width: 100%;
  height: 100vw;
  overflow: hidden;
}

.cover-img {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.cover-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.6));
  padding: 20px 16px;
  color: white;
}

.collection-info-fallback {
  background: white;
  padding: 20px 16px;
}

.collection-name {
  font-size: 20px;
  font-weight: 600;
  color: inherit;
  margin-bottom: 8px;
  line-height: 1.3;
}

.cover-overlay .collection-name {
  color: white;
}

.route-count {
  font-size: 14px;
  opacity: 0.9;
}

.cover-overlay .route-count {
  color: white;
}

/* 路线部分 */
.routes-section {
  background: white;
  margin-bottom: 12px;
}

.section-title {
  padding: 16px 16px 8px;
  font-size: 16px;
  font-weight: 600;
  color: #111;
  border-bottom: 1px solid #f0f0f0;
}

.empty-routes {
  padding: 48px 16px;
  text-align: center;
  color: #888;
  font-size: 14px;
}

.routes {
  padding: 8px 16px 16px;
}

.route-item {
  background: #fff;
  border-radius: 8px;
  padding: 12px 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 16px;
  font-weight: 600;
  color: #111;
}

.chevron {
  color: #bbb;
  font-size: 20px;
}

.meta {
  display: flex;
  align-items: center;
  margin-top: 8px;
}

.meta-item {
  display: flex;
  align-items: baseline;
  gap: 6px;
}

.meta-label {
  font-size: 12px;
  color: #888;
}

.meta-value {
  font-size: 12px;
  color: #333;
  font-weight: 600;
}

.divider {
  width: 1px;
  height: 16px;
  background: #eee;
  margin: 0 12px;
}

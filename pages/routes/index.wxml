<view class="routes">
  <block wx:if="{{loading}}">
    <view class="placeholder">加载中...</view>
  </block>
  <block wx:elif="{{error}}">
    <view class="placeholder error">{{error}}</view>
  </block>
  <block wx:elif="{{empty}}">
    <view class="placeholder">暂无线路</view>
  </block>
  <block wx:else>
    <block wx:for="{{routes}}" wx:key="id">
      <view class="route-item" data-id="{{item.id}}" bindtap="onRouteTap">
        <view class="row">
          <view class="title">{{item.name}}</view>
          <text class="chevron">›</text>
        </view>
        <view class="meta">
          <view class="meta-item">
            <text class="meta-label">里程</text>
            <text class="meta-value">{{item.lenText}}</text>
          </view>
          <view class="divider"></view>
          <view class="meta-item">
            <text class="meta-label">预计</text>
            <text class="meta-value">{{item.timeText}}</text>
          </view>
          <view class="divider"></view>
          <view class="meta-item">
            <text class="meta-label">最高海拔</text>
            <text class="meta-value">{{item.altText}}</text>
          </view>
        </view>
      </view>
    </block>
  </block>
</view>


